<Page x:Class="GoodRest.AdminHotel"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GoodRest"
      mc:Ignorable="d" 
    d:DesignHeight="861" d:DesignWidth="1807"
      Title="AdminHotel" Background="#7FFBFBFB" Loaded="Page_Loaded">

    <Grid>
        <Label Content="Меню отелей" HorizontalAlignment="Left" Margin="693,10,0,0" VerticalAlignment="Top" Foreground="#FF3C5952" FontSize="72"/>
        <Button Name="AllHotel"  Content="Продолжить" HorizontalAlignment="Left" Margin="657,264,0,0" VerticalAlignment="Top" Width="538" Height="68" BorderBrush="{x:Null}" Background="#B2DDDDDD" Foreground="#FF294F4C"  Cursor="Hand" FontSize="24" Click="AllHotel_Click"   />
        <Button Name="Instruction" Content="Инструкция по использованию" HorizontalAlignment="Left" Margin="657,580,0,0" VerticalAlignment="Top" Width="538" Height="68" BorderBrush="{x:Null}" Background="#B2DDDDDD" Foreground="#FF294F4C"  Cursor="Hand" FontSize="24" Click="Instruction_Click"   />
        <TextBlock Name="Vivod" HorizontalAlignment="Left" Margin="175,743,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="108" Width="1514" Foreground="#FF636F70" FontSize="24" Opacity="100" ><Run Text=" Для редактирования "/><Run Text="информации о "/><Run Text="отеле"/><Run Text=": выбер"/><Run Text="е"/><Run Text="те поле для редактирования"/><Run Text=", "/><Run Text="измените значения и нажмите кнопку сохранить."/><LineBreak/><Run Text=" Для добавления "/><Run Text="отеля"/><Run Text=": введите значения в пустую строку, после того как все поля будут заполнены нажмите кнопку сохранить."/><LineBreak/><Run Text=" Для удаления "/><Run Text="отеля"/><Run Text=": выберете строку "/><Run Text="отеля"/><Run Text=" и нажмите кнопку удалить."/></TextBlock>
        <Button Name="SavePhoto"  Content="Загрузка фотографии в БД" HorizontalAlignment="Left" Margin="657,376,0,0" VerticalAlignment="Top" Width="538" Height="68" BorderBrush="{x:Null}" Background="#B2DDDDDD" Foreground="#FF294F4C"  Cursor="Hand" FontSize="24" Click="SavePhoto_Click"   />
        <Button Name="DeletePhoto"  Content="Удаление фотографий из БД" HorizontalAlignment="Left" Margin="657,477,0,0" VerticalAlignment="Top" Width="538" Height="68" BorderBrush="{x:Null}" Background="#B2DDDDDD" Foreground="#FF294F4C"  Cursor="Hand" FontSize="24" Click="DeletePhoto_Click"    />

    </Grid>
</Page>
